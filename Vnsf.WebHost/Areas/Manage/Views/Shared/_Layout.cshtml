<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Phân hệ quản lý", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>


            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Thông báo<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Mẫu tin", "Index", "Post", null, null)</li>
                            <li><a href="#">Tags</a></li>
                            <li>@Html.ActionLink("Nhóm tin", "PostCategory", "Category", null, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Địa phương hóa <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Continent</a></li>
                            <li><a href="#">Country</a></li>
                            <li><a href="#">Region</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Language</a></li>
                            <li><a href="#">Currency</a></li>
                            <li>@Html.ActionLink("Cultures", "Index", "Culture", null, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Chương trình <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Nhóm chương trình</a></li>
                            <li>@Html.ActionLink("Chương trình tại trợ", "Index", "Grant", null, null)</li>
                            <li>@Html.ActionLink("Đợt tài trợ", "Index", "Opportunity", null, null)</li>
                            <li>@Html.ActionLink("Mẫu hồ sơ", "Index", "ApplicationForm", null, null)</li>

                            <li class="divider"></li>
                            <li>@Html.ActionLink("Hồ sơ đề xuất", "Index", "Application", null, null)</li>
                            <li>@Html.ActionLink("Danh sách tài trợ", "Index", "UserProfile", null, null)</li>
                            <li>@Html.ActionLink("Báo cáo", "Index", "Reports", null, null)</li>
                        </ul>
                    </li>

                    <li></li>
                    <li>@Html.ActionLink("Phân loại", "Index", "Classification", null, null)</li>
                </ul>
                @*@Html.Partial("_LanguageSelector")*@


            </div>


        </div>
    </div>
    <div class="container body-content">
        <div class="alert container alert-container"></div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/extlibs")
    @Scripts.Render("~/bundles/appjs")


    @RenderSection("scripts", required: false)
    @Html.Partial("_Alerts")
    @*@Html.Partial("_LangSelector")*@
</body>
</html>