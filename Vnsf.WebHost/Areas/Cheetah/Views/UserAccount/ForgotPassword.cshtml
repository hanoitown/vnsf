@model Vnsf.WebHost.Areas.Cheetah.Models.UserAccountLoginModel
@{
    ViewBag.Title = "ForgotPassword";
}

<h2>ForgotPassword</h2>
<div class="row">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <hr />
        @Html.ValidationSummary(true)
        <div class="form-horizontal col-md-8">

            <div class="form-group">
                @Html.LabelFor(model => model.EmailOrMobile, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.EmailOrMobile)
                    @Html.ValidationMessageFor(model => model.EmailOrMobile)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" value="Reset password" class="btn btn-default" />
                </div>
            </div>
        </div>

    }
</div>
