@model Vnsf.WebHost.Models.DocumentViewModel
@using Humanizer

@{
    Layout = "~/Areas/Cheetah/Views/Shared/_LayoutForAnonymous.cshtml";
}

<h2>FileShare - @Model.Name</h2>
<h4>@Model.Description</h4>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContentType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContentType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContentLength)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContentLength)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Path)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Path)
        </dd>
        <dd>
            @((Model.LastUpdated != null) ? ((DateTime)Model.LastUpdated).Humanize(false, DateTime.Now) : string.Empty)
        </dd>

    </dl>
</div>

@Html.ActionLink("Download", "DownloadFile", new { id = Model.Id }, new { @class = "btn btn-primary" })

