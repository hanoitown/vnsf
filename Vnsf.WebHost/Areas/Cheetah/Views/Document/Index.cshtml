@model IEnumerable<Vnsf.WebHost.Models.DocumentViewModel>
@using Humanizer
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@ViewData["breadcrumb"]
    <p>
        @Html.ActionLink("Create New", "AddFile")
    </p>
    <table class="table">
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContentLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.CheckBox("delete")</td>
                <td>
                    @if (item.IsFolder)
                    {
                        <p><i class="fa fa-folder-o fa-fw"></i>  @Html.ActionLink(item.Name, "FolderView", new { id = item.Id })</p>

                    }
                    else
                    {
                        @Html.ActionLink(item.Name, "FolderView", new { id = item.Id })

                    }
                </td>

                <td>
                    @*@Html.DisplayFor(modelItem => item.ContentType)*@
                    @(string.IsNullOrEmpty(item.ContentType) ? "--" : item.ContentType)
                </td>
                <td>
                    @(item.ContentLength == 0 ? "--" : item.ContentLength.Bits().Kilobytes.ToString())
                    @*@Html.DisplayFor(modelItem => item.ContentLength.Bits().Kilobytes)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Path)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
                <td>
                    <div class="btn-group ">
                        <a class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown" href="#">
                            <span class="fa fa-link fa-fw"></span>
                            <span class="fa fa-caret-down"></span>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="#"><i class="fa fa-share-square-o fa-fw"></i> Share Link ..</a></li>
                            <li><a href="@Url.Action("DownloadFile",new {id=item.Id})"><i class='fa fa-download fa-fw'></i>  Download</a></li>
                            <li><a href="#"><i class="fa fa-edit fa-fw"></i> Rename ..</a></li>
                            <li><a href="#"><i class="fa fa-reply fa-fw"></i> Move ..</a></li>
                            <li><a href="#"><i class="fa fa-copy fa-fw"></i> Copy ..</a></li>
                            <li><a href="#"><i class="fa fa-clock-o fa-fw"></i> Previous versions</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }

    </table>
