<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="../../assets/js/html5shiv.js"></script>
      <script src="../../assets/js/respond.min.js"></script>
    <![endif]-->
    @Styles.Render("~/Content/css")


    @functions{
        public string GetAntiForgeryToken()
        {
            string cookieToken, formToken;
            AntiForgery.GetTokens(null, out cookieToken, out formToken);
            return cookieToken + ":" + formToken;
        }
    }
    @RenderSection("head_script", required: false)

    <style type="text/css">
        body {
            padding-top: 70px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @Html.Partial("_topBar")
            </div>
            <div class="col-md-3">
                @Html.Partial("_Alerts")
                @Html.Partial("_sidebar")
            </div>
            <div class="col-md-9">
                <span class="alert" id="message"></span>
                @RenderBody()
            </div>
            <input type="hidden" id="antiForgeryToken" value="@GetAntiForgeryToken()" />
        </div>
        @Html.Partial("~/Areas/Admin/Views/Shared/_bottomBar.cshtml")
    </div>

    @Scripts.Render(
                        "~/bundles/jquery",
                        "~/bundles/extlibs",
                        "~/bundles/bootstrap",
            // "~/Scripts/lib/require.js",
            "~/bundles/appjs"
            //"~/Scripts/main.js"
                        )
    @*Render optional script for each section*@
    @RenderSection("scripts", required: false)
</body>

</html>