@model Vnsf.WebHost.Areas.Admin.Models.ClassificationInputModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ClassificationViewModel</h4>
        @Html.ActionLink("Categories", "Categories", new { Id = Model.Classification.Id })
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Classification.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Classification.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Classification.Name)
                @Html.ValidationMessageFor(model => model.Classification.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Classification.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Classification.Description)
                @Html.ValidationMessageFor(model => model.Classification.Description)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
